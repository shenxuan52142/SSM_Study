<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sx.mapper.StudentSMapper">
    <insert id="add" parameterType="StudentS" >
        insert into students (id,name,age ) values (#{id},#{name},#{age})
    </insert>

    <delete id="delete" parameterType="StudentS" >
        delete from students where id= #{id}
    </delete>

    <select id="get" parameterType="int" resultType="StudentS">
        select * from   students  where id= #{id}
    </select>

    <update id="update" parameterType="StudentS" >
        update students set id=#{id},age=#{age},name=#{name} where id=#{id}
    </update>
    <select id="list" resultType="StudentS">
        select * from   students
    </select>
</mapper>

